## -*- coding: utf-8 -*-
<%namespace name="helper" file="index_helper.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%inherit file="base.tmpl"/>
<%block name="content">
    % for post in posts:
        <div class="panel panel-default">
			<div class="panel-heading">
				<h2><a href="${post.permalink()}">${post.title()}</a> <small>${messages("Posted:")} <time class="published" datetime="${post.date.isoformat()}">${post.formatted_date(date_format)}</time></small></h2>
			</div>
			<div class="panel-body">
				${post.text(teaser_only=index_teasers)}
			</div>
			<div class="panel-footer">
				<div class="row">
					<div class="col-md-6">
					%if post.tags:
						%for tag in post.tags:
							<a class="tag" href="${_link('tag', tag)}"><span>${tag}</span></a>
						%endfor
					%endif
					</div>
					<div class="col-md-6">
					% if not post.meta('nocomments'):
						${comments.comment_link(post.permalink(), post.base_path)}
					% endif
					</div>
				</div>
			</div>
        </div>
    % endfor
    ${helper.html_pager()}
    ${comments.comment_link_script()}
	${helper.mathjax_script(posts)}
</%block>